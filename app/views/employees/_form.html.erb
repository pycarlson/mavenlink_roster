<%= form_for(@employee) do |f| %>

    <div>
      <%= f.label :full_name %>
      <%= f.text_field :full_name %>
      <%= f.label :email_address %>
      <%= f.text_field :email_address %>
      <%= f.label :department %>
      <%= f.text_field :department_id %>
    </div>

    <div>
      <%= f.submit %>
    </div>

<% end %>